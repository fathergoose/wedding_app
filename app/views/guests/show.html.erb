<div class="page-header">
  <%= link_to guests_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_guest_path(@guest), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show guest</h1>
</div>

<dl class="dl-horizontal">
  <dt>First name:</dt>
  <dd><%= @guest.first_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @guest.last_name %></dd>

  <dt>Email:</dt>
  <dd><%= @guest.email %></dd>

</dl>
