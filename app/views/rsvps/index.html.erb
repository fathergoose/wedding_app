<p id="notice"><%= notice %></p>

<h1>Listing Rsvps</h1>

<%= form_tag rsvps_path, :method => 'get', :class => 'form-inline' do%>
  <div class="form-group">
    <%= text_field_tag :search, params[:search], :class => "form-control" %>
    <%= button_tag "Search", :name => nil, :class => "btn btn-success" %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Guest</th>
      <th>Plusone</th>
      <th>Email</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.guest %></td>
        <td><%= rsvp.plusone %></td>
        <td><%= rsvp.email %></td>
        <td><%= rsvp.comment %></td>
        <td><%= link_to 'Show', rsvp %></td>
        <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
        <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rsvp', new_rsvp_path %>
